!!!
%html
	%head
		%meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
		%title Scorecard
		%meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
		= csrf_meta_tags
		= csp_meta_tag
		%link{href: "https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css", rel: "stylesheet"}/
		%script{src: "https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"}
		%script{ src: "https://cdn.jsdelivr.net/npm/chart.js" }
		= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload"
		= stylesheet_link_tag "application", "data-turbo-track": "reload"
		= javascript_importmap_tags
	%body
		%main.w-full.bg-gradient-to-br.from-slate-50.to-blue-50.dark:from-gray-900.dark:to-gray-800.text-gray-800.dark:text-gray-100.font-sans.h-screen.overflow-auto
			.w-full
				- if notice.present?
					.bg-green-100.border.border-green-400.text-green-700.px-4.py-3.rounded.relative.mb-4{role: "alert"}
						%span.block.sm:inline= notice
				- if alert.present?
					.bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.relative.mb-4{role: "alert"}
						%span.block.sm:inline= alert
				
				= yield

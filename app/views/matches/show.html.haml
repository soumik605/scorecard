.w-full
	= link_to "<- Matchs list", tournament_path(@match.tournament), class: "mb-4 px-3 py-2 text-xs font-medium text-center inline-flex items-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300"

	.my-1.py-4.bg-slate-100.w-full.flex.justify-center
		.mb-2.text-gray-900.text-2xl.bg-orange-300.w-full.py-4.text-center
			%span{class: @match.winner_team_id.present? ? @match.winner_team_id == @match.teams.first.id ? "font-bold text-green-500" : "text-light text-red-600" : "font-bold"}= @match.teams.first.captain.name
			%span.mx-2 vs
			%span{class: @match.winner_team_id.present? ? @match.winner_team_id == @match.teams.last.id ? "font-bold text-green-500" : "text-light text-red-600" : "font-bold"}= @match.teams.last.captain.name


	%div{"data-controller" => "tabs", "data-tabs-active-tab-class" => "-mb-px border-l border-t border-r rounded-t"}
		%ul.list-reset.flex.border-b
			%li.-mb-px.mr-1{"data-action" => "click->tabs#change:prevent", "data-tabs-target" => "tab"}
				%a.bg-white.inline-block.py-2.px-4.text-blue-500.hover:text-blue-700.font-semibold.no-underline{href: "#"} Players
			%li.mr-1{"data-action" => "click->tabs#change:prevent", "data-tabs-target" => "tab"}
				%a.bg-white.inline-block.py-2.px-4.text-blue-500.hover:text-blue-700.font-semibold.no-underline{href: "#"} Result
			
		.hidden.py-4.px-4.border-l.border-b.border-r{"data-tabs-target" => "panel"}
			= render "matches/players"
		.hidden.py-4.px-4.border-l.border-b.border-r{"data-tabs-target" => "panel"}
			= render "matches/result"
		


	
- all_wicket_stats = []
- players.each do |pl|
  - arr = getPlayerWicketData(pl, @performances, @matches, tour_type, @tours)
  - arr << pl["name"]
  - arr << pl["id"]
  - all_wicket_stats << arr if arr[0].present? && arr[0] > 0

- all_wicket_stats = all_wicket_stats.sort { |a, b| b[0] <=> a[0] }


.relative.overflow-x-auto
  %table.w-full.text-sm.text-left.rtl:text-right.text-gray-500
    %thead.text-xs.text-gray-700.uppercase.bg-gray-50
      %tr
        %th.px-6.py-3.whitespace-nowrap.bg-slate-100.text-black.sticky.left-0{scope: "col"}
          Name
        %th.px-6.py-3.whitespace-nowrap.text-center{scope: "col"}
          Wickets
        -# %th.px-6.py-3.whitespace-nowrap.text-center{scope: "col"}
        -#   Matches
        %th.px-6.py-3.whitespace-nowrap.text-center{scope: "col"}
          Innings
        %th.px-6.py-3.whitespace-nowrap.text-center{scope: "col"}
          3 wicket
        %th.px-6.py-3.whitespace-nowrap.text-center{scope: "col"}
          4 wicket
        %th.px-6.py-3.whitespace-nowrap.text-center{scope: "col"}
          5+ wicket
        %th.px-6.py-3.whitespace-nowrap.text-center{scope: "col"}
          No Wicket

      
    %tbody
      - all_wicket_stats.each do |pl|
        %tr.border-b
          %th.px-6.py-3.bg-slate-100.text-black.sticky.left-0{scope: "row"}
            = link_to pl[7], player_path(pl[8]), class: "whitespace-nowrap text-center text-blue-800 underline"
          %td.px-6.py-3
            %h5.whitespace-nowrap.text-center= pl[0]
          -# %td.px-6.py-3
          -#   %h5.whitespace-nowrap.text-center= pl[1]
          %td.px-6.py-3

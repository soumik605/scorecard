- all_run_stats = []
- players.each do |pl|
  - arr = getPlayerRunData(pl, @performances, @matches, tour_type, @tours)
  - arr << pl["name"]
  - arr << pl["id"]
  - all_run_stats << arr

- all_run_stats = all_run_stats.sort { |a, b| b[0] <=> a[0] }

.relative.overflow-x-auto
  %table.w-full.text-sm.text-left.rtl:text-right.text-gray-500
    %thead.text-xs.text-gray-700.uppercase.bg-gray-50
      %tr
        %th.px-6.py-3.whitespace-nowrap.bg-slate-100.text-black.sticky.left-0{scope: "col"}
          Name
        %th.px-6.py-3.whitespace-nowrap{scope: "col"}
          Runs
        %th.px-6.py-3.whitespace-nowrap{scope: "col"}
          Innings

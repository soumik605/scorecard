.flex.items-center.justify-center.min-h-screen.bg-gray-100.p-4
  = link_to 'Back to Home', auctions_path, class: "absolute top-4 left-4 text-sm text-blue-600 hover:underline border p-4 border-lg shadow-xl"

  .w-full.max-w-md.bg-white.shadow-xl.rounded-2xl.p-8

    %h1.text-3xl.font-bold.text-center.text-gray-800.mb-6 Register

    - if @user.errors.any?
      .bg-red-100.text-red-700.border.border-red-300.p-3.rounded-lg.mb-4.text-sm
        %ul.list-disc.pl-5
          - @user.errors.full_messages.each do |msg|
            %li= msg

    = form_with model: @user, url: register_path, local: true, class: "space-y-5" do |f|

      .flex.flex-col
        = f.label :name, "Username", class: "text-gray-700 font-medium mb-1"
        = f.text_field :name, class: "text-black w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-600 focus:border-green-600 outline-none"

      .flex.flex-col
        = f.label :password, "Password", class: "text-gray-700 font-medium mb-1"
        = f.text_field :password, class: "text-black w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-600 focus:border-green-600 outline-none"

      .pt-2
        = f.submit "Register", class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2.5 rounded-lg shadow-md transition"

					%span.text-xs.font-semibold.text-gray-700.dark:text-gray-200.text-center= item[:name]


	/ ==== MAIN CONTENT AREA ====
	.max-w-7xl.mx-auto.px-4.py-8
		%h2.text-3xl.font-extrabold.tracking-tight.text-center.mb-8.bg-clip-text.text-transparent.bg-gradient-to-r.from-blue-500.to-indigo-600
			Explore Tournaments

		- if @tours.present?
			.grid.grid-cols-1.sm:grid-cols-2.lg:grid-cols-3.xl:grid-cols-4.gap-6
				- @tours.sort_by { |item| item["isComplete"] ? 1 : 0 }.each do |tour|
					- url = tournament_path(id: tour["id"])
					- gradient = case tour["tour_type"]
					- when "test" then "from-sky-100 to-blue-200 dark:from-sky-900 dark:to-blue-800" # calm, professional (Test)
					- when "solo_test" then "from-purple-100 to-pink-200 dark:from-purple-900 dark:to-pink-800" # elegant, solo vibe
					- when "t10" then "from-orange-100 to-amber-200 dark:from-orange-900 dark:to-amber-800" # fast, energetic
					- when "super_over" then "from-rose-100 to-red-200 dark:from-rose-900 dark:to-red-800" # intense, dramatic
					- else "from-emerald-100 to-teal-200 dark:from-emerald-900 dark:to-teal-800" # fallback neutral

					- icon_path = case tour["tour_type"]
					- when "test" then "üèè" # Classic cricket icon
					- when "solo_test" then "üë§" # Solo / personal challenge
					- when "t10" then "‚ö°" # Fast-paced energy
					- when "super_over" then "üî•" # Sudden death / intensity
					- when "test15" then "üü¢" # Fresh, new hybrid format
					- else "üéØ" # Fallback


					= link_to url, class: "group relative rounded-3xl p-6 bg-gradient-to-br #{gradient} shadow-md hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 overflow-hidden" do
						.flex.flex-col.justify-between.h-full
							.mb-4
								.fle.w-full.flex.justify-between.items-center
									%h3.text-xl.font-bold.text-gray-900.dark:text-white.group-hover:text-blue-700.dark:group-hover:text-blue-400.transition-colors= tour["name"]
									%h3.text-sm.text-gray-900.dark:text-white.group-hover:text-blue-700.dark:group-hover:text-blue-400.transition-colors= "##{tour["id"]}"
								.inline-block.text-xs.font-semibold.text-gray-800.dark:text-gray-100.bg-white-40.dark:bg-gray-700-40.py-1.rounded-full= tour["tour_type"].humanize

							.flex.items-center.justify-between.mt-auto
								%div
									- if tour["isComplete"]
										%span.text-sm.text-green-700.dark:text-green-400.font-semibold ‚úÖ Completed
									- else
										%span.text-sm.text-yellow-700.dark:text-yellow-400.font-semibold üïê Ongoing
								%div
									%span.text-2xl= icon_path

							- if tour["is_removed"]
								%span.absolute.top-3.right-3.bg-red-600.text-white.text-xs.font-semibold.px-2.py-1.rounded-full.shadow Removed
		- else
			.text-center.py-20.text-gray-600.dark:text-gray-400
				%p.text-lg.font-medium No tournaments found.
				%p.text-sm.mt-1 Create one to get started!

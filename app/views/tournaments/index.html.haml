					%span.text-xs.font-semibold.text-gray-700.dark:text-gray-200.text-center= item[:name]


	/ ==== MAIN CONTENT AREA ====
	.max-w-7xl.mx-auto.px-4.py-12
		%h2{ class: "text-3xl font-black tracking-tight text-center mb-12 text-gray-900 dark:text-white" }
			Explore
			%span{ class: "bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-indigo-600" } Tournaments

		- if @tours.present?
			.grid{ class: "grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6" }
				- @tours.sort_by { |item| [item["isComplete"] ? 1 : 0, item["tour_type"]] }.each do |tour|
					- url = tournament_path(id: tour["id"])
					
					- theme = case tour["tour_type"]
						- when "test" 
							- { card: "bg-blue-50 dark:bg-slate-900/80 border-blue-200/50", badge: "bg-blue-500/10 text-blue-700 dark:text-blue-300", ping: "bg-blue-400", dot: "bg-blue-600", btn: "hover:bg-blue-600", text: "Test" }
						- when "solo_test" 
							- { card: "bg-violet-50 dark:bg-violet-950/30 border-violet-200/50", badge: "bg-violet-500/10 text-violet-700 dark:text-violet-300", ping: "bg-violet-400", dot: "bg-violet-600", btn: "hover:bg-violet-600", text: "Solo" }
						- when "t10" 
							- { card: "bg-amber-50 dark:bg-amber-950/30 border-amber-200/50", badge: "bg-amber-500/10 text-amber-700 dark:text-amber-300", ping: "bg-amber-400", dot: "bg-amber-600", btn: "hover:bg-amber-600", text: "T10" }
						- when "super_over" 
							- { card: "bg-red-50 dark:bg-red-950/30 border-red-200/50", badge: "bg-red-500/10 text-red-700 dark:text-red-300", ping: "bg-red-400", dot: "bg-red-600", btn: "hover:bg-red-600", text: "Super" }
						- else 
							- { card: "bg-emerald-50 dark:bg-emerald-950/30 border-emerald-200/50", badge: "bg-emerald-500/10 text-emerald-700 dark:text-emerald-300", ping: "bg-emerald-400", dot: "bg-emerald-600", btn: "hover:bg-emerald-600", text: "T15" }

					.group.relative{ class: "#{theme[:card]} rounded-3xl border shadow-sm hover:shadow-xl transition-all duration-300 flex flex-col overflow-hidden" }
						-# 1. Subtle Type Watermark (Behind content for extra differentiation)
						%div{ class: "absolute top-1 right-1 h-24 opacity-[0.03] dark:opacity-[0.07] pointer-events-none" }
							%span{ class: "text-6xl font-black italic select-none" }= theme[:text].upcase

						.p-4.flex.flex-col.h-full.z-10
							-# Header
							.flex{ class: "justify-between items-start mb-2" }
								%div
									.flex{ class: "items-center gap-3 mb-1" }
										%span{ class: "text-[12px] font-bold uppercase tracking-widest opacity-40 text-gray-900 dark:text-gray-400" }= "##{tour["id"]}"
										-# %span{ class: "px-2 py-0.5 rounded-md text-[10px] font-black uppercase #{theme[:badge]}" }
										-# 	= tour["tour_type"].humanize
										- unless tour["isComplete"]
											%div{ class: "flex items-center gap-1.5 px-2 py-1 rounded-full bg-white/80 dark:bg-gray-800 shadow-sm border border-gray-100 dark:border-gray-700" }
												%span.relative.flex.h-2.w-2
													%span{ class: "animate-ping absolute inline-flex h-full w-full rounded-full opacity-75 #{theme[:ping]}" }
													%span{ class: "relative inline-flex rounded-full h-2 w-2 #{theme[:dot]}" }
												%span{ class: "text-[10px] font-bold text-gray-600 dark:text-gray-300 uppercase" } Live
												
									%h3{ class: "text-xl font-extrabold text-gray-900 dark:text-white" }= tour["name"]
								
								

							-# Podium Section (Conditional)
							- if tour["isComplete"]
								- a = @players.select{|p| tour["1st"].include?(p["id"])}
								- b = @players.select{|p| tour["2nd"].include?(p["id"])}
								- c = @players.select{|p| tour["3rd"].include?(p["id"])}

								%div{ class: "mt-4 mb-4 bg-white/40 dark:bg-black/20 backdrop-blur-sm rounded-2xl p-4 border border-white/60 dark:border-gray-700/50" }
									.flex{ class: "items-end justify-center gap-4" }
										-# Podium logic remains the same...
										
										- if b.present?
											- b.each do |pl|
												.flex.flex-col.items-center
													.relative
														= image_tag pl["photo_name"], class: "w-9 h-9 rounded-full border-2 border-slate-300 object-cover"
														%div{ class: "absolute -bottom-1 -right-1 bg-slate-400 text-white text-[8px] w-4 h-4 flex items-center justify-center rounded-full font-bold shadow-sm" } 2
													%div{ class: "h-4 w-10 bg-slate-200 dark:bg-slate-700 rounded-t-sm mt-1" }
										
										- if a.present?
											- a.each do |pl|
												.flex.flex-col.items-center
													.relative{ class: "scale-110 -translate-y-1" }
														= image_tag pl["photo_name"], class: "w-11 h-11 rounded-full border-2 border-yellow-400 shadow-lg object-cover"
														%div{ class: "absolute -bottom-1 -right-1 bg-yellow-500 text-white text-[8px] w-4 h-4 flex items-center justify-center rounded-full font-bold shadow-sm" } 1
													%div{ class: "h-6 w-10 bg-yellow-400 rounded-t-sm mt-1" }

										- if c.present?
											- c.each do |pl|
												.flex.flex-col.items-center
													.relative
														= image_tag pl["photo_name"], class: "w-9 h-9 rounded-full border-2 border-amber-700 object-cover"
														%div{ class: "absolute -bottom-1 -right-1 bg-amber-800 text-white text-[8px] w-4 h-4 flex items-center justify-center rounded-full font-bold shadow-sm" } 3
													%div{ class: "h-2 w-10 bg-amber-600/50 rounded-t-sm mt-1" }

							-# Action Button
							%div{ class: "mt-auto pt-2" }
								= link_to url, class: "w-full inline-flex items-center justify-center px-4 py-2.5 rounded-xl bg-white/60 dark:bg-gray-950/40 text-gray-700 dark:text-gray-200 text-xs font-bold transition-all border border-white dark:border-gray-800 shadow-sm #{theme[:btn]} hover:text-white" do
									View Details
									%svg{ class: "w-3.5 h-3.5 ml-2", fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
										%path{ d: "M13 7l5 5m0 0l-5 5m5-5H6", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2.5" }

						- if tour["is_removed"]
							%div{ class: "absolute inset-0 bg-white/40 dark:bg-black/40 backdrop-blur-[1px] flex items-center justify-center z-20" }
								%span{ class: "bg-white dark:bg-gray-800 text-red-600 text-[10px] font-black px-3 py-1 rounded-md shadow-xl border border-red-100" } REMOVED
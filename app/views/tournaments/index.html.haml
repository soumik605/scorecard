		-# 		.text-xs Ranking

		.p-2
			= link_to stats_path, class: "border rounded-lg p-2 flex flex-col items-center w-16" do
				%svg.size-6{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
					%path{d: "M10.5 6a7.5 7.5 0 1 0 7.5 7.5h-7.5V6Z", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
					%path{d: "M13.5 10.5H21A7.5 7.5 0 0 0 13.5 3v7.5Z", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
				.text-xs Stats

		- if user_signed_in?
			.p-2 
				= link_to new_tournament_path, class: "border rounded-lg p-2 flex flex-col items-center w-16" do
					%svg.size-6{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
						%path{d: "M12 4.5v15m7.5-7.5h-15", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
					.text-xs New


				
	- if @tours.present?
		- @tours.each do |tour|
			.my-3
				= link_to tournament_path(id: tour["id"]), class: "relative flex justify-between w-full p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100" do
					%div
						- if tour["is_removed"] 
							%spam removed
						%h5.mb-2.text-2xl.font-bold.tracking-tight.text-gray-900= tour["name"]
						- matches = @matches.filter{|m| m["tournament_id"] == tour["id"]}
						- final = matches.present? ? matches.find{|m| m["match_type"] == "final"} : nil
						- if final.present? && final["winner_team_id"].present?
							- team = @teams.find{|t| t["id"] == final["winner_team_id"]}
							- player = team.present? ? @players.find{|p| p["id"] == team["captain_id"]} : nil
							%p.font-normal.text-gray-700.text-green-600= "WINNER : #{player["name"]}"
						- else
							%p.font-normal.text-gray-700= "Win point : #{tour["win_point"]}"
					.bg-slate-100.p-4.absolute.right-0.top-0.h-full{class: "[writing-mode:vertical-lr]"}
						.text-lg.text-center.tracking-widest= tour["tour_type"].try(:humanize)
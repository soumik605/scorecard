= link_to "<- Matches list", tournament_path(@tour["id"]), class: "mb-4 px-3 py-2 text-xs font-medium text-center inline-flex items-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300"

.mt-6 
	.text-lg.mb-3.text-center Batting Records
	= render "players/run_stat", players: @players, tour_type: @tour["tour_type"], tours: [@tour]

.mt-10
	.text-lg.mb-3.text-center Bowling Records
	= render "players/wicket_stat", players: @players, tour_type: @tour["tour_type"], tours: [@tour]
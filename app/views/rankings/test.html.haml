.w-full.bg-white.text-black
  = link_to "<- Tournaments list", tournaments_path, class: "mb-8 px-3 py-2 text-xs font-medium text-center inline-flex items-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300"

  .text-2xl.text-center Rankings
  .text-sm.text-center Based on last 10 innings of each player
  .mt-8

    .mb-6
      = render "rankings/links", active: "test"

    %div{"data-controller" => "tabs", "data-tabs-active-tab-class" => "-mb-px border-l border-t border-r rounded-t"}
      %ul.list-reset.flex.border-b
        %li.mr-1{"data-action" => "click->tabs#change:prevent", "data-tabs-target" => "tab"}
          %a.inline-block.py-2.px-4.text-blue-500.hover:text-blue-700.font-semibold.no-underline{href: "#"} All Round
        %li.-mb-px.mr-1{"data-action" => "click->tabs#change:prevent", "data-tabs-target" => "tab"}
          %a.inline-block.py-2.px-4.text-blue-500.hover:text-blue-700.font-semibold.no-underline{href: "#"} Batting
        %li.mr-1{"data-action" => "click->tabs#change:prevent", "data-tabs-target" => "tab"}
          %a.inline-block.py-2.px-4.text-blue-500.hover:text-blue-700.font-semibold.no-underline{href: "#"} Bowling
        
      .hidden.py-4.border-l.border-b.border-r{"data-tabs-target" => "panel"}
        = render 'rankings/allround', allround_ranking: @allround_ranking
      .hidden.py-4.border-l.border-b.border-r{"data-tabs-target" => "panel"}
        = render 'rankings/runs', batting_ranking: @batting_ranking
      .hidden.py-4.border-l.border-b.border-r{"data-tabs-target" => "panel"}
        = render 'rankings/wickets', bowling_ranking: @bowling_ranking

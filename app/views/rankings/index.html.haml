.w-full
  .text-2xl.text-center Rankings
  .text-sm.text-center Based on last 10 innings of each player
  .mt-8

    %div{"data-controller" => "tabs", "data-tabs-active-tab-class" => "-mb-px border-l border-t border-r rounded-t"}
      %ul.list-reset.flex.border-b
        %li.-mb-px.mr-1{"data-action" => "click->tabs#change:prevent", "data-tabs-target" => "tab"}
          %a.bg-white.inline-block.py-2.px-4.text-blue-500.hover:text-blue-700.font-semibold.no-underline{href: "#"} Runs
        %li.mr-1{"data-action" => "click->tabs#change:prevent", "data-tabs-target" => "tab"}
          %a.bg-white.inline-block.py-2.px-4.text-blue-500.hover:text-blue-700.font-semibold.no-underline{href: "#"} Wickets
        
      .hidden.py-4.px-4.border-l.border-b.border-r{"data-tabs-target" => "panel"}
        = render 'rankings/runs', runs: @runs
      .hidden.py-4.px-4.border-l.border-b.border-r{"data-tabs-target" => "panel"}
        = render 'rankings/wickets', wickets: @wickets
